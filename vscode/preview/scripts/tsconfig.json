{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2022", "dom"],
    "types": ["node"],
    "noEmit": false,
    "outDir": "../build/scripts",
    "rootDir": "..",
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "./**/*.ts",
    "../src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 